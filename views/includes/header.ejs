
<div class="blocks">
    <div class="logo">
        <a href="/"><img src="/img/logo.svg" alt="logo"></a>
        <% if(user && user.status > 2){%>
            <br><a href="/amd/querys" class="active" ><img src="/img/sign/key.png" alt="A" style="width: 30px"></a>
        <%}%>
    </div>
    <div class="info">
        <span id="time" title="время сервера"></span>
    </div>
    <div class="account">
        <div class="top">
            <div class="lang">
                <a href="#"><img src="/img/lang/en.png" alt=""></a>
                <a href="#" class="active"><img src="/img/lang/ru.png" alt=""></a>
                <a href="#"><img src="/img/lang/ch.png" alt=""></a>
            </div>
            <span>Личный кабинет</span>
        </div>
        <% if(user){%>
        <div class="in_acc">
            <div class="body">
                <div class="name"><span><%= user.name_f%></span><a href="/logout" >Выйти</a></div>
                <div class="currency">
                    <div class="currency_text">
                        <!--<div class="namecur">B:</div><div class="val">55.00</div><div class="img"><img src="/img/account/currency/1.png" alt=""></div>-->
                        <!--<br><div class="namecur">S:</div><div class="val">5.00</div><div class="img"><img src="/img/account/currency/1.png" alt=""></div>-->
                        <!--<br><div class="namecur">P:</div><div class="val">25.00</div><div class="img">%</div>-->
                    </div>
                    <div class="currency_text">
                        <div class="img"><img src="/img/account/currency/2.png" alt=""></div><div class="val"><%= user.RUR %></div>
                        <br><div class="img"><img src="/img/account/currency/1.png" alt=""></div><div class="val"><%= user.PZM %></div>
                        <br><div class="img">$</div><div class="val"><%= user.USD %></div>
                    </div>
                </div>
            </div>
            <div class="bottom">
                <div><img src="/img/account/1.png" alt=""><a href="#">ПАРОВОЗ</a></div>
                <div><img src="/img/account/2.png" alt=""><a href="#">rePRIZM</a></div>
            </div>
        </div>

        <%} else {%>

        <div class="signup">
            <form id="formlogin" action="/login" method="post">
                <div class="form-group"><input class="input-form-email form-control email" name="email" type="text" placeholder="E-mail"></div>
                <div class="form-group"><input class="input-form-pass form-control password" name="password" type="password" placeholder="Пароль"></div>
                <div class="bottom"></div>
                <div class="bottom">
                    <input type="submit" id="signup" class="btn active" value="Войти" />
                    <div class="form_link"><a href="/confirmed/droppass" id="repass">Забыли пароль?</a><br><a href="/register">Регистрация</a></div>
                </div>
            </form>
        </div>
        <div class="repass" style="display: none;">
            <form action="/confirmed/senddroppass" method="post">
                <div class="form-group">
                    <input class="form-control email" name="email" type="text" placeholder="E-mail">
                </div>
                <div class="bottom"></div>
                <div class="bottom">
                    <input type="submit" id="repassbtn" class="btn active">Сменить</input>
                    <div class="form_link"><a href="#" id="signupform">Войти</a><br><a href="/register">Регистрация</a></div>
                </div>
            </form>
        </div>
        <%}%>
    </div>
</div>
<div class="header_line">

</div>


<div class="w3-small" id="info">

</div>

